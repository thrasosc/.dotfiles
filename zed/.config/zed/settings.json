// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "features": {
    "edit_prediction_provider": "none"
  },
  "auto_signature_help": true,
  "preferred_line_length": 120,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "vim_mode": true,
  "relative_line_numbers": true,
  "ui_font_size": 16,
  "buffer_font_size": 15,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark"
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 0
    }
  },
  "format_on_save": "off",
  "lsp": {
    "texlab": {
      "settings": {
        "texlab": {
          "build": {
            "executable": "lualatex"
            // "onSave": true,
            // "forwardSearchAfter": true
          },
          "forwardSearch": {
            "executable": "sioyek",
            "args": [
              "-g",
              "--reuse-window",
              "--inverse-search",
              "zed \"%%1\":%%2",
              "--forward-search-file",
              "%f",
              "--forward-search-line",
              "%l",
              "%p"
            ]
          }
        }
      }
    },
    "tinymist": {
      "initialization_options": {
        "preview": {
          "background": {
            "enabled": true
          }
        }
      },
      "settings": {
        "exportPdf": "onSave",
        "outputPath": "$root/$name"
      }
    }
  },
  "languages": {
    "LaTeX": {
      "soft_wrap": "editor_width"
    }
  }
}
