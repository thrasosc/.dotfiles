[
  {
    "label": "Open Typst Preview",
    "command": "open -na Safari http://127.0.0.1:23635/ && osascript -e 'tell application \"Safari\" to close (every tab of every window whose URL is not \"http://127.0.0.1:23635/\")'",
    "use_new_terminal": true,
    "allow_concurrent_runs": false,
    "reveal": "never",
    "reveal_target": "dock",
